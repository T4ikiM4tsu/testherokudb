<div class="panel panel-default">
 <div class="panel-heading">
    <div class="panel-title">検索</div>
  </div>
  <div class="panel-body">
   
    <%= search_form_for(@q, method: :get) do |f| %>
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :営業担当 %>
            <%= f.text_field :attr_name, class: "form-control", placeholder: "完全一致" %>
          </div>
        </div>
        
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :営業担当 %>
            <%= f.text_field :sales_company_eq, class: "form-control", placeholder: "完全一致" %>
          </div>
        </div>
        
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :営業担当 %>
            <%= f.text_field :end_user, class: "form-control", placeholder: "完全一致" %>
          </div>
        </div>
        
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :営業担当 %>
            <%= f.text_field :model_eq, class: "form-control", placeholder: "完全一致" %>
          </div>
        </div>
        
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :営業担当 %>
            <%= f.text_field :quantity_eq, class: "form-control", placeholder: "完全一致" %>
          </div>
        </div>
        
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :営業担当 %>
            <%= f.text_field :price_eq, class: "form-control", placeholder: "完全一致" %>
          </div>
        </div>
        
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :案件詳細 %>
            <%= f.text_field :content_cont, class: "form-control", placeholder: "部分一致" %>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :name_or_description_cont %>
            <%= f.text_field :name_or_description_cont, class: "form-control", placeholder: "複数条件部分一致" %>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="form-inline">
            <%= f.label :receipt_day %>
            <%= f.date_select :delivery_day_gt, {include_blank: true, use_month_numbers: true, date_separator: ' / '}, class: "form-control" %>〜
            <%= f.date_select :delivery_day_lt, {include_blank: true, use_month_numbers: true, date_separator: ' / '}, class: "form-control" %>
          </div>
        </div>
      </div>
      <%= f.submit '検索', notes_index_path, class: "btn btn-primary" %>
      <%= link_to 'クリア', url_for, class: "btn btn-default" %>
    <% end %>
  </div>
</div>
</div>

